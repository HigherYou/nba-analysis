.tab-header {
  display: flex;
  background-color: var(--card-bg);
  padding: var(--spacing-sm);
  margin-bottom: var(--spacing-md);
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: var(--spacing-sm);
  color: var(--text-secondary);
  border-bottom: 4rpx solid transparent;
}

.tab-item.active {
  color: var(--text-primary);
  border-bottom-color: var(--nba-red);
  font-weight: bold;
}

.chart-section {
  padding: var(--spacing-md);
  background: var(--card-bg);
  margin: var(--spacing-md);
  border-radius: 12rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: var(--spacing-md);
  color: var(--text-primary);
  border-left: 8rpx solid var(--nba-red);
  padding-left: var(--spacing-sm);
}

.chart-container {
  width: 100%;
  height: 500rpx;
}

ec-canvas {
  width: 100%;
  height: 100%;
}

.chart-desc {
  font-size: 24rpx;
  color: var(--text-muted);
  margin-top: var(--spacing-sm);
  text-align: center;
}

.highlight {
  color: var(--nba-red);
  font-weight: bold;
}

.data-list {
  padding: var(--spacing-md);
}

.player-card {
  display: flex;
  align-items: center;
  background: var(--card-bg);
  padding: var(--spacing-md);
  margin-bottom: var(--spacing-md);
  border-radius: 12rpx;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: var(--spacing-md);
  background-color: #333;
}

.info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.name {
  font-size: 28rpx;
  color: var(--text-primary);
}

.team {
  font-size: 24rpx;
  color: var(--text-secondary);
}

.stat-box {
  text-align: right;
}

.stat-value {
  font-size: 32rpx;
  display: block;
}

.stat-label {
  font-size: 20rpx;
  color: var(--text-muted);
}
