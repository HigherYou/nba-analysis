.date-header {
  display: flex;
  justify-content: space-around;
  background-color: var(--card-bg);
  padding: var(--spacing-sm) 0;
  margin-bottom: var(--spacing-sm);
}

.date-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: var(--spacing-xs) var(--spacing-md);
  color: var(--text-secondary);
}

.date-item.active {
  color: var(--text-primary);
  border-bottom: 4rpx solid var(--nba-red);
}

.day-label {
  font-size: 24rpx;
}

.full-date {
  font-size: 20rpx;
  margin-top: 4rpx;
}

.match-list {
  height: calc(100vh - 120rpx);
}

.match-card {
  background: var(--card-bg);
  margin: var(--spacing-md);
  padding: var(--spacing-md);
  border-radius: 12rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.3);
}

.status-bar {
  display: flex;
  justify-content: space-between;
  margin-bottom: var(--spacing-md);
  font-size: 22rpx;
  color: var(--text-muted);
}

.status-text.live {
  color: var(--nba-red);
  font-weight: bold;
}

.teams-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.team-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 35%;
}

.team-logo {
  width: 80rpx;
  height: 80rpx;
  background: #333;
  border-radius: 50%;
  margin-bottom: var(--spacing-xs);
}

.team-name {
  font-size: 28rpx;
  font-weight: bold;
  color: var(--text-primary);
}

.team-score {
  font-size: 40rpx;
  font-weight: bold;
  margin-top: var(--spacing-xs);
  color: var(--text-secondary);
}

.team-score.winner {
  color: var(--text-primary);
}

.vs-divider {
  color: var(--text-muted);
  font-size: 24rpx;
  font-style: italic;
}

.empty-state {
  text-align: center;
  color: var(--text-muted);
  margin-top: 100rpx;
}
