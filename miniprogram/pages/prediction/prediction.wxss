.section-title {
  font-size: 30rpx;
  font-weight: bold;
  color: var(--text-primary);
  margin: var(--spacing-md) var(--spacing-md) var(--spacing-sm);
  border-left: 6rpx solid var(--nba-red);
  padding-left: 16rpx;
}

.predict-card {
  background: var(--card-bg);
  margin: var(--spacing-md);
  padding: var(--spacing-md);
  border-radius: 12rpx;
}

.game-info {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
  font-size: 22rpx;
  color: var(--text-muted);
}

.matchup-row {
  display: flex;
  align-items: center;
  justify-content: space-around;
  margin-bottom: 30rpx;
}

.team-p {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.p-logo {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 8rpx;
}

.p-name {
  font-size: 28rpx;
  font-weight: bold;
}

.vs-text {
  font-style: italic;
  color: var(--text-muted);
}

.prob-bar-container {
  display: flex;
  height: 40rpx;
  border-radius: 20rpx;
  overflow: hidden;
  margin-bottom: 16rpx;
  background: #333;
}

.prob-bar {
  display: flex;
  align-items: center;
  height: 100%;
  transition: width 1s ease-in-out;
}

.prob-bar.home {
  background: var(--nba-red); /* Home team color usually */
  justify-content: flex-start;
  padding-left: 10rpx;
}

.prob-bar.away {
  background: var(--nba-blue); /* Away team color usually */
  justify-content: flex-end;
  padding-right: 10rpx;
}

.prob-text-l, .prob-text-r {
  font-size: 20rpx;
  color: #fff;
  font-weight: bold;
}

.prob-desc {
  text-align: center;
  font-size: 20rpx;
  color: var(--text-muted);
}

.prop-list {
  padding: 0 var(--spacing-md);
}

.prop-card {
  display: flex;
  align-items: center;
  background: var(--card-bg);
  margin-bottom: 20rpx;
  padding: 20rpx;
  border-radius: 12rpx;
}

.prop-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  background: #333;
}

.prop-content {
  flex: 1;
}

.prop-title {
  font-size: 28rpx;
  color: var(--text-primary);
  display: block;
}

.prop-desc {
  font-size: 24rpx;
  color: var(--text-secondary);
}

.prop-badge {
  float: right;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  font-size: 22rpx;
  font-weight: bold;
}

.prop-badge.high {
  background: rgba(0, 191, 165, 0.2);
  color: var(--success);
}

.prop-badge.med {
  background: rgba(255, 215, 64, 0.2);
  color: var(--warning);
}
