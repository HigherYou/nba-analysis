.header-card {
  background: linear-gradient(135deg, #1E1E1E 0%, #2A2A2A 100%);
  padding: 40rpx;
  display: flex;
  align-items: center;
  border-bottom: 2rpx solid #333;
}

.big-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 4rpx solid var(--nba-red);
  margin-right: 30rpx;
  background-color: #333;
}

.basic-info {
  display: flex;
  flex-direction: column;
}

.player-name {
  font-size: 36rpx;
  font-weight: bold;
  color: var(--text-primary);
  margin-bottom: 8rpx;
}

.player-meta {
  font-size: 24rpx;
  color: var(--text-secondary);
}

.chart-container-square {
  width: 100%;
  height: 600rpx;
  background: var(--card-bg);
  margin-bottom: var(--spacing-md);
}

.stats-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
  padding: 30rpx;
}

.stat-item {
  background: #252525;
  padding: 20rpx;
  border-radius: 8rpx;
  text-align: center;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.highlight-box {
  border: 1px solid var(--nba-red);
  background: rgba(201, 8, 42, 0.1);
}

.val {
  font-size: 32rpx;
  font-weight: bold;
  color: var(--text-primary);
}

.label {
  font-size: 20rpx;
  color: var(--text-muted);
  margin-top: 8rpx;
}
